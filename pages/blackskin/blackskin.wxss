.container{
    width:100%;
    height:500px;
}
.ripple {
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 50%;
    height:10px;
    width:10px;
    margin-top: -90px;
    position: absolute;
    -webkit-transform: scale(0);
}
@-webkit-keyframes ripple {
    100% {
    -webkit-transform: scale(120);
    transform: scale(132);
    background-color: transparent;
    }
}